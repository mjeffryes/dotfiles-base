[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[rerere]
  enabled = 1
[diff]
  renames = true
  copies = true
[fetch]
  prune = true
[push]
  default = simple
# http://stackoverflow.com/questions/18257622/why-is-git-core-preloadindex-default-value-false
[core]
  preloadindex = true
  deltabasecachelimit = 4g
  editor = /usr/bin/vim
[http]
  postBuffer = 209715200
[alias]
  root = !pwd
  exec = "!exec "
[help]
  autocorrect = 1
[alias]
  append = commit --amend -C HEAD
  newbranch = checkout origin/master -b
  co = checkout
[pull]
  rebase = true
[rebase]
  autostash = true
[init]
  defaultBranch = master
[feature]
  manyfiles = true

